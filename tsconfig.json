{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "types": ["node", "jest"],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "test"]
}
